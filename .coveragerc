[run]
branch = 1
cover_pylib = 0
include=*faust/*
omit = t.*

[report]
omit =
    */python?.?/*
    */site-packages/*
    */pypy/*

    # tested by functional tests
    */faust/cli/agents.py
    */faust/cli/model.py
    */faust/cli/models.py
    */faust/cli/reset.py
    */faust/cli/send.py
    */faust/cli/tables.py
    */faust/cli/worker.py
    */faust/cli/base.py
    */faust/web/apps/*
    */faust/assignor/*
    */faust/transport/drivers/*

    # tested by integration
    */faust/tables/manager.py

    # not needed
    */faust/utils/functional.py
    */faust/utils/kafka/*
    */faust/types/*
    */faust/__main__.py

    # for vineet
    */faust/app/router.py
    */faust/windows.py

    # deprecataed
    */faust/app/_attached.py
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    \@abc\.abstractmethod
